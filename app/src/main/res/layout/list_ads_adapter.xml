<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:layout_margin="0dp"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@layout/card_background_judul"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="vertical" >

            <TextView
                android:id="@+id/isi_nomor_assigment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:hint="Kosong"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="15sp"
                android:visibility="gone">
            </TextView>
            
            <TextView
                android:id="@+id/isi_nama_toko"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:hint="Toko Kosong"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="13sp">
            </TextView>
            
            <TextView
                android:id="@+id/isi_status_awb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:hint="Kosong"
                android:textColor="#333333"
                android:textSize="13sp" >
            </TextView>
            
            <TextView
                android:id="@+id/isi_jml"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:hint="Kosong"
                android:textColor="#333333"
                android:textSize="13sp" >
            </TextView>
            
            <TextView
                android:id="@+id/isi_no_pass_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="266dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:hint="Kosong"
                android:textColor="#333333"
                android:textSize="13sp" >
            </TextView>
            
            <TextView
                android:id="@+id/isi_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="238dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:hint="Kosong"
                android:textColor="#333333"
                android:textSize="15sp"
                android:visibility="gone">
            </TextView>
        </RelativeLayout>
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>