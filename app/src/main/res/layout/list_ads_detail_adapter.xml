<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:layout_margin="0dp"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@layout/card_background_judul"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="vertical" >

            <TextView
                android:id="@+id/isi_nomor_assigment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:hint="Kosong"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="15sp"
                android:visibility="gone">
            </TextView>
            
            <TextView
                android:id="@+id/isi_no_awb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:hint="AWB Kosong"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="13sp">
            </TextView>
            
            <TextView
                android:id="@+id/isi_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:hint="Status"
                android:textColor="#333333"
                android:textSize="15sp">
            </TextView>
            
            <TextView
                android:id="@+id/isi_service"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:hint="Service"
                android:textColor="#333333"
                android:textSize="15sp"
				android:visibility="gone" />
            
            <TextView
                android:id="@+id/isi_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:hint="Kosong"
                android:textColor="#333333"
                android:textSize="15sp">
            </TextView>
            
            <!-- <CheckBox
                android:id="@+id/selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="36dip"
                android:focusable="false"
                android:visibility="gone"/>
            
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_alignParentLeft="true"
                android:button="@drawable/cb_selector"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text=""
                android:textColor="#ffffff" /> -->
                
                <ImageView
                    android:id="@+id/checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dip"
                    android:background="@drawable/checked_icon"
                    android:focusable="false"
                    android:visibility="gone" />
                
                <ImageView
                    android:id="@+id/unchecked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dip"
                    android:background="@drawable/unchecked_icon"
                    android:focusable="false"
                    android:visibility="gone" />
                
                <CheckBox
                    android:id="@+id/selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dip"
                    android:focusable="false" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="340dp"
                android:layout_alignBaseline="@+id/checkBox1"
                android:layout_alignBottom="@+id/checkBox1"
                android:layout_toRightOf="@+id/checkBox1"
                android:text="TextView"
                android:textColor="#ffffff"
                android:visibility="gone" />
            
            <TextView
                android:id="@+id/txt_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="340dp"
                android:layout_alignBaseline="@+id/checkBox1"
                android:layout_alignBottom="@+id/checkBox1"
                android:layout_toRightOf="@+id/checkBox1"
                android:text="TextView"
                android:textColor="#ffffff"
                android:visibility="gone" />
        </RelativeLayout>
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>