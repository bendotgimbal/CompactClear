<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp">

        <TextView android:id="@+id/tv_nama_kurir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "John Doe"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white_alpha"/>
        <TextView android:id="@+id/tv_nama_toko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "K427 - Cikokol 2"
            android:textSize="12sp"
            android:textColor="@color/white_alpha"/>
        <TextView android:id="@+id/tv_alamat_toko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "RUKO MAHKOTA MAS BLK C1, Cikokol, Tangerang, Kota Tangerang"
            android:textSize="12sp"
            android:textColor="@color/white_alpha"/>
        <TextView android:id="@+id/tv_latlong_toko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Latlong"
            android:textColor="@color/white_alpha"
            android:textSize="12sp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>