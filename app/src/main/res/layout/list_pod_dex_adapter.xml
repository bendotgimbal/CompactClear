<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:layout_margin="0dp"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@layout/card_background_judul"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="vertical" >

            <TextView
                android:id="@+id/judul_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:text="Tanggal"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" >
            </TextView>

            <TextView
                android:id="@+id/isi_nomor_awb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:hint="Kosong"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="15sp" >
            </TextView>
            
            <TextView
                android:id="@+id/isi_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:hint="Kosong"
                android:textColor="#333333"
                android:textSize="15sp" >
            </TextView>
            
            <TextView
                android:id="@+id/isi_service"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:hint="Kosong"
                android:textColor="#333333"
                android:textSize="15sp" >
            </TextView>
            
            <TextView
                android:id="@+id/rp_nilai_cod"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="5dp"
                android:text="Rp"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="15sp" >
            </TextView>
            
            <TextView
                android:id="@+id/isi_nilai_cod"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="5dp"
                android:hint="0"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="15sp" >
            </TextView>

<!--                <TextView-->
<!--                    android:id="@+id/tv_info"-->
<!--                    android:layout_width="fill_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="300dp"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:text="AA"-->
<!--                    android:tag="info"-->
<!--                    android:paddingBottom="2dip"-->
<!--                    android:textColor="#333333"-->
<!--                    android:textSize="15sp" >-->
<!--                </TextView>-->
                <ImageView
                    android:id="@+id/im_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/information"
                    android:tag="info"
                    android:paddingBottom="2dip"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:visibility="gone">
                </ImageView>

        </RelativeLayout>
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>