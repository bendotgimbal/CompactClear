<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:layout_margin="0dp"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@layout/card_background_judul"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="vertical" >

            <TextView
                android:id="@+id/isi_nomor_awb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:hint="AWB Kosong"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="13sp"
                android:visibility="gone">
            </TextView>
            
            <TextView
                android:id="@+id/isi_kode_setor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:hint="Kode"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="13sp">
            </TextView>
            
            <TextView
                android:id="@+id/isi_tanggal_setor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:hint="Tanggal"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="13sp">
            </TextView>
            
            <TextView
                android:id="@+id/isi_status_setor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="5dp"
                android:hint="Status"
                android:paddingBottom="2dip"
                android:textColor="#333333"
                android:textSize="13sp">
            </TextView>
            
            <TextView
                android:id="@+id/rp_total_setor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:text="Rp"
                android:textColor="#333333"
                android:textSize="13sp" >
            </TextView>
            
            <TextView
                android:id="@+id/isi_total_awb_setor_cod"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:hint=",00"
                android:textColor="#333333"
                android:textSize="13sp" >
            </TextView>
            
            <TextView
                android:id="@+id/isi_alamat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dip"
                android:visibility = "gone" 
                android:hint="Kosong"
                android:textColor="#333333"
                android:textSize="13sp" >
            </TextView>
        </RelativeLayout>
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>